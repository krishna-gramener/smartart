{
  "name": "smartart",
  "version": "1.0.0",
  "description": "A lightweight, responsive CSS library for creating beautiful chevron-style progress indicators and flowcharts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "mkdir -p dist && esbuild chevron.css --bundle --minify --outfile=dist/chevron.min.css",
    "screenshot": "node screenshot.js",
    "dev": "echo 'Development server would serve index.html here'",
    "lint:oxlint": "npx -y oxlint --fix",
    "lint:js-md": "npx -y prettier@3.5 --print-width 120 --write '**/*.js' '!**/*.min.js' '**/*.md'",
    "lint:html": "npx -y js-beautify@1 '**/*.html' --type html --replace --indent-size 2 --max-preserve-newlines 1 --end-with-newline",
    "lint": "npm run lint:js-md && npm run lint:html",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "css",
    "chevron",
    "progress",
    "flowchart",
    "smart-art",
    "ui",
    "responsive",
    "no-js"
  ],
  "author": "Anand S <anand@anand.to>",
  "license": "MIT",
  "homepage": "https://github.com/sanand0/smartart#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanand0/smartart.git"
  },
  "bugs": {
    "url": "https://github.com/sanand0/smartart/issues"
  },
  "devDependencies": {
    "esbuild": "^0.25.8",
    "playwright": "^1.54.1",
    "sharp": "^0.34.3"
  }
}
